                //연습문제 6번		
                System.out.println("숫자를 입력하세요");
		Scanner sc = new Scanner(System.in); 
		int x = sc.nextInt();
		int sum=0;
		int startNumber =0;
		
		if(x%2==0) {
			startNumber=0;
		}else {
			startNumber=1;
		}
			for(int i =startNumber; i<=x; i++) {
				sum += i;
				
			}
			System.out.println("결과값 :"+ sum);//

              //연습문제7
                int num = (int) (Math.random() * 1) + 1;
		Scanner sc = new Scanner(System.in);
		System.out.println("숫자맞추게 게임");

		for (;;) {
			System.out.print(">>");
			int x = sc.nextInt();
			if (x == num) {
				System.out.println("맞습니다");
				System.out.print("게임을 종료하시겠습니까?(y/n)>>");
				String r = sc.next();
				if(r.equals("y")) {
					System.out.println("게임종료");
					break;
				}else {
				 System.out.println("재시작");
				}

			} else if (x > num) {
				System.out.println("더낮게");

			} else {
				System.out.println("더높게");

			}
		}
		


                // 연습문제 7번
		// 숫자 맞추기 게임 
		// 1. 1~100 사이의 임의의 수 선택
		// 2. 키보드로 수 입력 받기
		// 3. 입력받은 수와 미리 선택된 수 비교 해서 낮게 높게 출력
		// 4. 맞혔을 경우 게임 계속 진행 여부 입력 받기 y n
		// 5. y == 종료 
		// 6. n == 계속 진행 (1부터 다시 시작 ...)
		
		Scanner sc = new Scanner(System.in);
		Boolean b = true;
		while( b ) {
			int number = (int)(Math.random()*100) + 1;
			
			while(true) {
				System.out.print(">>");
				int input = sc.nextInt();
				
				if(input > number ) {
					System.out.print("더 낮게");
				}else if(input < number ){
					System.out.print("더 높게");
				}else {
					System.out.print("맞았습니다");
					sc.next();
					break;
				}
			}
			
			System.out.print("게임을 종료? (y/n)");
			String yn = sc.next();
			
			if("y".equals(yn) || "Y".equals(yn)) {
				b = false;
			}
		}










