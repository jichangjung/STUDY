                //연습문제 2번
		System.out.println("숫자를 입력하세요");
		Scanner sc = new Scanner(System.in);
		int x = sc.nextInt();
		for (int a = 1;a<=x; a++) {
			for (int b =0; b < a; b++) {
				System.out.print(a);
			}
			System.out.println();
		}
		sc.close();//

               //연습문제3번
