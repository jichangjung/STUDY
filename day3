		System.out.print("숫자를 입력하세요 >");
		int end = sc.nextInt();
		//System.out.println("");
		
		for(int i=1 ;i<=end ; i++) {
			//System.out.println( i );
			for(int j=1; j<=i ;j++) {
				System.out.print( i );
			}
			System.out.println();
		}//

